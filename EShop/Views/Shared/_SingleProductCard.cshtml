@model EShop.Models.Product
@{
var filepath = "";
                if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    filepath = System.IO.Path.Combine(@WC.ImagePath,Model.ImagePath);
                } 
}

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.CategoryName.Replace(' ','_')">
    <!-- Card-->

    <div class="card border-primary mb-3" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-6"><label class="float-left">@Model.ProductName</label></div>
            <div class="col-6"><label class="float-right"><span class="text-info h5">@String.Format("{0:C0}", @Model.Price) </span> / sqft</label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@filepath" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge bg-dark p-2 border w-100" >@Model.Category.CategoryName</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge bg-info p-2 border w-100" >@Model.ApplicationType.ApplicationName</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p>@Model.ShortDesc</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
