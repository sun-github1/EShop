@model EShop.Models.ApplicationType

<form method="post" asp-action="Edit">
      <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">Edit Application Type</h2>
        </div>
        <input asp-for="Id" hidden />
        @*<div class="text-danger" asp-validation-summary="All"></dikv>*@
        <div class="mb-3">
                <label asp-for="ApplicationName"></label>         
                <input asp-for="ApplicationName" class="form-control" />
                <span asp-validation-for="ApplicationName" class="text-danger"></span>
        </div>

      
        <div class="mb-3">
            <input type="submit" class="btn btn-primary" value="Create" />
           <a asp-action="Index" asp-controller="ApplicationType" class="btn btn-success">Back</a>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }

} 