@model IEnumerable<EShop.Models.ApplicationType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="col-6">
        <h2 class="text-primary">Application Type List</h2>
    </div>
    <div class="col-6">
        <a asp-action="Create" asp-controller="ApplicationType" class="btn btn-primary">Create New Application Type</a>
    </div>
</div>
<br />
<br />

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Application Type Name
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var eachAppType in Model)
            {
                <tr>
                    <td width="50%">
                        @eachAppType.ApplicationName
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-primary">No ApplicationType Found</div>
}
