@model IEnumerable<EShop.Models.ApplicationType>

@{
    ViewData["Title"] = "Index";
}

 <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-end">
           <a asp-action="Create" asp-controller="ApplicationType" class="btn btn-primary">
                <i class="bi bi-plus-circle">Create New Application Type</a>
        </div>
    </div>
    </div>
    <br />
    <br />

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Application Type Name
                </th>
               <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eachAppType in Model)
            {
                <tr>
                    <td width="70%">
                        @eachAppType.ApplicationName
                    </td>
                    <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-controller="ApplicationType" asp-route-id="@eachAppType.Id"
                                class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit</a>
                                <a asp-action="Delete" asp-controller="ApplicationType" asp-route-id="@eachAppType.Id" class="btn btn-danger mx-2">
                                 <i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-primary">No ApplicationType Found</div>
}
