@model EShop.Models.ViewModels.HomeViewModel



<div class="container p-3">
    <div class=text-center>
        <button class="btn btn-primary filter-button" data-filter="all">
            All
        </button>
        @foreach (var obj in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.CategoryName.Replace(' ','_')">
                @obj.CategoryName
            </button>
        }
    </div>

    <br />
                                        
    <div class="row">
        @foreach(var prod in Model.Products)
        {
            <partial name="_SingleProductCard" model="prod"></partial>
        }
    </div>
</div>

@section Scripts{
<script>
    $(document).ready(function(){

    $(".filter-button").click(function(){

        var value = $(this).attr('data-filter');
        if(value == "all")
        {
            $('.filter').show('1000');
        }
        else
        {
            $(".filter").not('.'+value).hide('3000');
            $('.filter').filter('.'+value).show('3000');
            
        }
    });

});
</script>
}