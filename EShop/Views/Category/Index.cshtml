@model IEnumerable<EShop.Models.Category>

@{
    <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" 
            class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>&nbsp
            Create New Category</a>
        </div>
    </div>
    </div>
    <br />
    <br />

    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var eachCat in Model)
                {
                    <tr>
                        <td width="50%">
                            @eachCat.CategoryName
                        </td>
                        <td width="30%">
                            @eachCat.DisplayOrder
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-controller="Category" asp-route-id="@eachCat.Id"
                                class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit</a>
                                <a asp-action="Delete" asp-controller="Category" asp-route-id="@eachCat.Id" class="btn btn-danger mx-2">
                                 <i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
            else
            {
                <div class="text-primary">No category Found</div>
            }

}
